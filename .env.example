# =============================================================================
# IntelliNote Environment Configuration
# =============================================================================

# OpenRouter API Key (for future OCR integration)
VITE_OPENROUTER_API_KEY=sk-or-v1-your_free_key_here

# =============================================================================
# DEBUG FLAGS
# Enable/disable specific debug logging categories
# Set to 'true' to enable, 'false' or comment out to disable
# =============================================================================

# --- Frontend Debug Flags ---

# Canvas Operations
VITE_DEBUG_CANVAS=false                    # Canvas drawing, strokes, viewport transforms
VITE_DEBUG_CANVAS_HISTORY=false            # Undo/redo operations
VITE_DEBUG_CANVAS_OPTIMIZER=false          # Performance optimizations

# Drawing Tools
VITE_DEBUG_BRUSH=false                     # Brush rendering and pressure sensitivity
VITE_DEBUG_ERASER=false                    # Eraser tool operations
VITE_DEBUG_SHAPES=false                    # Shape drawing (rectangles, circles, etc.)

# Handwriting Detection & Recognition
VITE_DEBUG_HANDWRITING=false               # Handwriting detection algorithm
VITE_DEBUG_EQUALSIGN=false                 # Equal sign detection (=)
VITE_DEBUG_STROKE_ANALYZER=false           # Stroke analysis and grouping
VITE_DEBUG_SPATIAL_CONTEXT=false           # Spatial relationship analysis
VITE_DEBUG_SPATIAL_HASH_GRID=false         # Spatial hashing data structure

# OCR (Optical Character Recognition)
VITE_DEBUG_OCR=false                       # General OCR operations
VITE_DEBUG_OCR_CONFIG=false                # OCR configuration changes
VITE_DEBUG_OCR_PERFORMANCE=false           # OCR performance metrics
VITE_DEBUG_LOCAL_OCR=false                 # Local OCR service (TrOCR)
VITE_DEBUG_OPENROUTER_OCR=false            # OpenRouter OCR service
VITE_DEBUG_OCR_LEARNING=false              # OCR learning and adaptation
VITE_DEBUG_OCR_CACHE=false                 # Recognition caching system

# Math Recognition & Solving
VITE_DEBUG_MATH_DETECTION=false            # Math expression detection
VITE_DEBUG_MATH_SOLVER=false               # Math solving operations
VITE_DEBUG_MATH_ENGINE=false               # Math engine core operations
VITE_DEBUG_SMART_MATH_SOLVER=false         # Smart math solver (Python backend)
VITE_DEBUG_MATH_SIZE_MATCHING=false        # Size matching for handwritten answers

# UI Components
VITE_DEBUG_RESIZE_BOX=false                # Resizable detection box
VITE_DEBUG_RECOGNIZE_EQUATION=false        # Equation recognition process
VITE_DEBUG_MATH_SOLUTION_DISPLAY=false     # Solution display component
VITE_DEBUG_CORRECTION_MODAL=false          # Symbol correction modal

# Symbol & Formula Processing
VITE_DEBUG_SYMBOL_POST_PROCESSING=false    # Symbol post-processing
VITE_DEBUG_FORMULA_PATTERNS=false          # Formula pattern matching
VITE_DEBUG_CONTEXTUAL_CORRECTION=false     # Contextual symbol correction

# IndexedDB & Storage
VITE_DEBUG_INDEXEDDB=false                 # IndexedDB operations
VITE_DEBUG_DB=false                        # Database operations

# Performance & Optimization
VITE_DEBUG_PERFORMANCE=false               # Performance measurements
VITE_DEBUG_VIRTUAL_CANVAS=false            # Virtual canvas engine

# --- Backend Debug Flags (Python Server) ---

# OCR Server
DEBUG_OCR_SERVER=false                     # OCR server operations
DEBUG_OCR_SAVE_IMAGES=false                # Save OCR input images to disk
DEBUG_TROCR_MODEL=false                    # TrOCR model loading and inference

# Math Server
DEBUG_MATH_SERVER=false                    # Math solver server operations
DEBUG_MATH_FAST_PATH=false                 # Fast math solving path
DEBUG_MATH_SLOW_PATH=false                 # Slow math solving path (subprocess)
DEBUG_MATH_CLASSIFICATION=false            # Equation classification
DEBUG_MATH_HISTORY=false                   # Math solving history logging

# Equation Solving
DEBUG_EQUATION_CLASSIFIER=false            # Equation type classification
DEBUG_SMART_MATH_ENGINE=false              # Smart math engine operations
DEBUG_FAST_MATH_SOLVER=false               # Fast math solver
DEBUG_PHYSICS_SOLVER=false                 # Physics equation solver

# Server Health & Monitoring
DEBUG_SERVER_HEALTH=false                  # Server health checks
DEBUG_SERVER_STATS=false                   # Server statistics

# =============================================================================
# FEATURE FLAGS
# Enable/disable specific features
# =============================================================================

# Handwriting Synthesis (experimental)
VITE_ENABLE_HANDWRITING_SYNTHESIS=true

# Virtual Canvas (performance optimization)
VITE_ENABLE_VIRTUAL_CANVAS=false

# LRU Cache
VITE_ENABLE_RECOGNITION_CACHE=true

# Formula Library
VITE_ENABLE_FORMULA_LIBRARY=true

# =============================================================================
# CONFIGURATION
# =============================================================================

# OCR Settings
VITE_OCR_MIN_CONFIDENCE=0.7
VITE_LOCAL_SERVER_URL=http://localhost:8000

# Math Solver Settings
VITE_MATH_SOLVER_TIMEOUT=5000              # Timeout in milliseconds

# Canvas Settings
VITE_CANVAS_DEFAULT_WIDTH=2000
VITE_CANVAS_DEFAULT_HEIGHT=2000
VITE_GRID_SIZE=40
VITE_GRID_TYPE=dots                        # 'dots' or 'lines'

# Performance Settings
VITE_CACHE_SIZE=50                         # Recognition cache size
VITE_DEBOUNCE_DELAY=300                    # Debounce delay in milliseconds

# =============================================================================
# MASTER DEBUG SWITCH
# Set to 'true' to enable ALL debug logging (overrides individual flags)
# =============================================================================
VITE_DEBUG_ALL=false
DEBUG_ALL=false
